
%h2
  = @system.name

%h3 Available Subscriptions
#providers
  .grid_13#provider
    %table
      %thead
        %th Product
        %th Available
        %th Contract 
        %th Expires
        %th Actions
      - @pools.each do |pool|
        %tr{:class => cycle(nil, 'alt')}
          %td
            = pool["productName"]
          %td
            = pool["quantity"].to_i - pool["consumed"].to_i
          %td
            = pool["contractNumber"]
          %td
            = l Date.parse(pool["endDate"])
          %td
            = form_tag subscriptions_system_path(@system.uuid) do
              = hidden_field_tag("pool_id", pool['id'])
              .actions
                = submit_tag _("Subscribe")

